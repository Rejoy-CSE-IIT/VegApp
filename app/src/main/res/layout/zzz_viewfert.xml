<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".j_project_core.b_seed_section.d_recycler_view_seed_item_view.viewSeed">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"

            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Details of Seed Post"
                android:textColor="@color/textColor"
                android:id="@+id/seedlabel"

                android:textSize="30dp"
                android:gravity="center"
                android:layout_marginTop="30dp"

                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Organization"
                android:textColor="@color/textColor"
                android:textSize="18dp"

                android:id="@+id/organization_label"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/textColor"
                android:id="@+id/organization_ET"
                android:background="@drawable/patched_button"
                android:hint="Enter organization name  here" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price per Kg"
                android:textColor="@color/textColor"
                android:textSize="18dp"
                android:id="@+id/price_label"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"

                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/textColor"
                android:id="@+id/price_ET"
                android:background="@drawable/patched_button"
                android:hint="Enter Price Here"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/textColor"
                android:textSize="18dp"
                android:id="@+id/category_label"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"

                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/textColor"
                android:id="@+id/category_ET"
                android:background="@drawable/patched_button"
                android:hint="Enter Category Here"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textColor="@color/textColor"
                android:textSize="18dp"
                android:id="@+id/details_label"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"

                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/patched_button"

                android:textColor="@color/textColor"
                android:id="@+id/details_ET"
                android:hint="Enter Details Here"
                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Place"
                android:textColor="@color/textColor"
                android:textSize="18dp"
                android:id="@+id/place"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"

                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/patched_button"
                android:textColor="@color/textColor"
                android:id="@+id/place_ET"
                android:hint="Enter Details Here"
                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mobile no"
                android:textColor="@color/textColor"
                android:textSize="18dp"
                android:id="@+id/mobno"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"

                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/patched_button"
                android:textColor="@color/textColor"

                android:id="@+id/mobno_ET"
                android:hint="Enter mobile no Here"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="contacts"
                android:textColor="@color/textColor"
                android:textSize="18dp"
                android:id="@+id/contacts"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"

                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/patched_button"
                android:textColor="@color/textColor"
                android:id="@+id/contacts_ET"
                android:hint="Enter contacts   here"
                />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <ImageView android:layout_width="wrap_content"
                    android:id="@+id/image_select_from_galley_img"
                    android:background="@drawable/patched_button"

                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/alert_dark_frame"
                    />
            </LinearLayout>







            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/patched_button"
                android:id="@+id/ratesystem">

                <RatingBar
                    android:id="@+id/ratingBar"


                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#dcb021"

                    android:layout_centerVertical="true"
                    android:layout_marginTop="0dp"


                    android:textAlignment="center"
                    android:layout_weight=".75"
                    />

                <Button
                    android:id="@+id/rateB"

                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/ratingBar1"
                    android:layout_marginTop="0dp"
                    android:paddingLeft="3dp"
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:background="@drawable/button_bg_round_1"

                    android:text="Rate" />

            </LinearLayout>











            <Button
                android:text="approve"
                android:id="@+id/approve"
                android:layout_gravity="center_horizontal"

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_bg_round_0"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />


            <Button
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="delete"
                style="?android:textAppearanceSmall"
                android:textStyle="bold"
                android:id="@+id/delete"

                android:background="@drawable/button_selector"
                android:textColor="@color/textColor"

                />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
