<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"

    tools:context=".j_project_core.c_vegetable.c_recycler_view_veg_entry.vegformEntryForm">





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Veg Entry Form"
                android:textColor="@color/textColor"
                android:id="@+id/seedlabel"

                android:textSize="30dp"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Farm"
                android:textColor="@color/textColor"
                android:textSize="18dp"

                android:id="@+id/organization_label"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/patched_button"
                android:textColor="@color/textColor"
                android:id="@+id/organization_ET"
                android:hint="Enter Farm name  here" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price per Kg"
                android:textColor="@color/textColor"
                android:textSize="18dp"
                android:id="@+id/price_label"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"

                android:layout_marginTop="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/patched_button"
                android:textColor="@color/textColor"
                android:id="@+id/price_ET"
                android:hint="Enter Price Here"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/textColor"
                android:textSize="18dp"
                android:id="@+id/category_label"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"

                android:layout_marginTop="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/patched_button"
                android:textColor="@color/textColor"
                android:id="@+id/category_ET"
                android:hint="Enter Category Here"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textColor="@color/textColor"
                android:textSize="18dp"
                android:id="@+id/details_label"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"

                android:layout_marginTop="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/patched_button"
                android:textColor="@color/textColor"
                android:id="@+id/details_ET"
                android:hint="Enter Details Here"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Place"
                android:textColor="@color/textColor"
                android:textSize="18dp"
                android:id="@+id/place"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"

                android:layout_marginTop="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/patched_button"
                android:textColor="@color/textColor"
                android:id="@+id/place_ET"
                android:hint="Enter Details Here"
                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mobile no"
                android:textColor="@color/textColor"
                android:textSize="18dp"
                android:id="@+id/mobno"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"

                android:layout_marginTop="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/patched_button"
                android:textColor="@color/textColor"
                android:id="@+id/mobno_ET"
                android:hint="Enter mobile no Here"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="contacts"
                android:textColor="@color/textColor"
                android:textSize="18dp"
                android:id="@+id/contacts"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"

                android:layout_marginTop="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/patched_button"
                android:textColor="@color/textColor"
                android:id="@+id/contacts_ET"
                android:hint="Enter contacts   here"
                />

            <com.geometry.vegapp.d_ImageProcessing.PinchZoomImageView_class
                android:id="@+id/image_select_from_galley_img"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/alert_dark_frame"
                android:layout_centerInParent="true"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                >
            </com.geometry.vegapp.d_ImageProcessing.PinchZoomImageView_class>







            <Button
                android:text="Select\n Image"
                android:id="@+id/selectImageButton"
                android:layout_gravity="center_horizontal"

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_bg_round_0"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />


            <Button
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sumbmit for Approval"
                style="?android:textAppearanceSmall"
                android:textStyle="bold"
                android:id="@+id/seed_req_button"

                android:background="@drawable/button_selector"
                android:textColor="@color/textColor"

                />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>


